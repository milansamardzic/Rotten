<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="140dp"
    android:fontFamily="sans-serif-light">

<LinearLayout
    android:visibility="gone"
    android:id="@+id/showHide"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/tvDateHeader"
        android:text="January 01"
        android:textSize="16sp"
        android:textColor="#B71C1C"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:layout_toRightOf="@+id/tvDateLabel" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#3F51B5"/>

    </LinearLayout>

<RelativeLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:padding="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#fefefe"
    android:layout_below="@+id/showHide">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout"
        android:gravity="center_vertical"
        android:paddingLeft="95dp"
        android:layout_alignBottom="@+id/relativeLayout4"
        android:layout_below="@+id/linearLayout3">


        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/ratingbar1"
            android:isIndicator="true"
            android:alpha="0.7"
            style="@style/CustomRatingBar"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <com.milansamardzic.ms.RemoteImageView
        android:id="@id/image"
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:adjustViewBounds="false"
        android:src="@drawable/large_movie_poster"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true" />



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:paddingLeft="95dp"
    android:id="@+id/relativeLayout4">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:layout_weight="1"
        android:text="TitleTitleTitleTitleTitleTitleTitle"
        android:singleLine="true"
        android:textColor="#141414"
        android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvYearTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:layout_weight="0"
            android:text="(1014)"
            android:textColor="#3F51B5"
            android:fontFamily="sans-serif-light"
            android:textSize="18sp"/>

    </LinearLayout>


    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#85afbf"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="5dp"
        android:text="(1800)"
        android:textSize="20sp"
        android:gravity="left"
        android:layout_alignParentRight="true" />

</RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="95dp"
        android:id="@+id/linearLayout3"
        android:layout_centerVertical="true">


    <LinearLayout
        android:id="@+id/relLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout2">
        <TextView
            android:id="@+id/tvDateLabel"
            android:text="Relese: "
            android:fontFamily="sans-serif-light"
            android:layout_below="@+id/tvTitle"
            android:textSize="16sp"
            android:textColor="#141414"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_toLeftOf="@+id/mocni_rendzer" />

        <TextView
            android:id="@+id/tvDate"
            android:text="January 01"
            android:textSize="16sp"
            android:textColor="#B71C1C"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:layout_toRightOf="@+id/tvDateLabel" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_alignParentTop="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Runtime: "
                android:id="@+id/runtimeLabel"
                android:fontFamily="sans-serif-light"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textColor="#141414"
                android:layout_below="@+id/tvDate" />

            <TextView
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="150 min"
                android:ellipsize="end"
                android:id="@+id/mocni_rendzer"
                android:textSize="16sp"
                android:textColor="#3F51B5"
                android:layout_below="@+id/tvDate"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/runtimeLabel" />

    </LinearLayout>


    </LinearLayout>

</RelativeLayout>

</RelativeLayout>