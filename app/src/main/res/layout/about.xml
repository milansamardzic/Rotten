<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@drawable/custom_scroll_style">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp">
             <RelativeLayout
                android:id="@+id/aboutHeder"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#ce5043"
                android:gravity="center">


                 <ImageView
                     android:id="@+id/splashscreen"
                     android:layout_width="150dp"
                     android:layout_height="150dp"
                     android:gravity="center"
                     android:onClick="Animate"
                     android:background="@drawable/angry_ico"/>

             </RelativeLayout>

            <RelativeLayout
                android:id="@+id/middlePart"
                android:layout_width="match_parent"
                android:layout_below="@+id/aboutHeder"
                android:layout_height="250dp"

                android:gravity="center">


                <RelativeLayout
                    android:id="@+id/abutLogoA"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="sans-serif-light"
                        android:textSize="12sp"
                        android:scrollbarStyle="insideInset"
                        android:text="Get the best reviews and information for the latest and upcoming films. Save your favourite films for a quick access (even your offline).\nShare movie with your friends, and add to calendar, invite your friends to watch and enojoy together. Uses information from Rotten Tomatoes, one of the best film reviews aggregator.\n\n\n\nAutor: Milan Samardzic\nProject: MojaPraksa\nApp Name: Angry Tomato (c)\nVersion: 1.0\nYear: 2014"
                        android:id="@+id/textView2" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/abh_logo_main"
                    android:visibility="visible"
                    android:id="@+id/imageView"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/textView2" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/google_plus"
                        android:visibility="visible"
                        android:id="@+id/imageView3"
                        android:layout_alignParentBottom="true"
                        android:layout_toLeftOf="@+id/imageView"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/github"
                        android:visibility="visible"
                        android:layout_alignParentBottom="true"
                        android:layout_toLeftOf="@+id/imageView3" />

                </RelativeLayout>

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lvRnd"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>




 </RelativeLayout>