<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:isScrollContainer="true"
    tools:context=".BoxOfficeDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
            android:id="@+id/coverImage"
            android:layout_width="match_parent"
            android:layout_height="250dp">

                <com.milansamardzic.ms.RemoteImageView
                android:id="@+id/ivPosterImage1"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:maxHeight="250dp"
                android:background="@drawable/blac_white_gradient"
                android:src="@drawable/large_movie_poster"
                android:interpolator="@anim/abc_slide_in_bottom"
                android:duration="1600"
                android:scaleType="centerCrop"
                android:alpha="1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:minWidth="250dp"
                android:fadingEdge="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/blac_white_gradient"
                android:alpha="0.7"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true" />


            <TextView
                android:id="@+id/tvCriticsScore"
                android:textColor="#fff"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="88%"
                android:visibility="gone"
                android:gravity="center"
                android:background="@drawable/red_circle" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColorHighlight="#ddf435"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="#fff"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="24sp"
                android:gravity="left"
                android:text="Title"
                android:layout_marginBottom="15dp"
                android:layout_alignRight="@+id/ivCritichScore"
                android:layout_above="@+id/ivCritichScore" />

                <ImageView
                    android:id="@+id/ivCritichScore"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="3dp" />

                <TextView
                    android:id="@+id/tvYearDA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 MAY 2014"
                    android:textColor="#5DB6C9"
                    android:fontFamily="sans-serif-light"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_alignBottom="@+id/ivCritichScore"
                    android:layout_toRightOf="@+id/tvCriticsScore"
                    android:layout_marginLeft="136dp"
                    android:ellipsize="end" />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/synopsisRL" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#E91E63"
                android:layout_alignParentLeft="true"
                android:id="@+id/ivCastBack" />

                <TextView
                android:id="@+id/tvCastLabel"
                android:layout_alignTop="@+id/ivCastBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:gravity="center_vertical|left"
                android:textAlignment="textStart"
                android:textSize="26sp"
                android:fontFamily="sans-serif-light"
                android:text="Cast"
                android:layout_alignBottom="@+id/ivCastBack"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"/>


                <RelativeLayout
                    android:id="@+id/castPart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#fff"
                    android:layout_below="@+id/ivCastBack"
                    android:layout_alignParentLeft="true">

                    <TextView
                        android:id="@+id/tvCast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#141414"
                        android:lines="8"
                        android:textSize="16dp"
                        android:fontFamily="sans-serif-light"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:text="Christian Bale, Joseph-Gordon Levitt"
                        android:layout_alignParentLeft="true"
                        android:padding="5dp" />


                </RelativeLayout>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/synopsisRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="#fff"
                android:layout_below="@+id/middlePart"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#67EBB6"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/imageView"
                    android:layout_alignParentRight="true" />


                <TextView
                    android:id="@+id/tvSynopsisLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:gravity="center_vertical|left"
                    android:textAlignment="textStart"
                    android:textSize="26sp"
                    android:fontFamily="sans-serif-light"
                    android:text="Synopsis"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="18dp" />


                <TextView
                    android:id="@+id/tvSynopsis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#141414"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-light"
                    android:text="Some story"
                    android:layout_below="@+id/imageView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:padding="5dp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/middlePart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:maxHeight="300dp"
                android:padding="5dp"
                android:layout_marginTop="-50dp"
                android:layout_below="@+id/coverImage"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="300dp"
                    android:gravity="center"
                    android:id="@+id/relo"
                    android:layout_toRightOf="@+id/ivPosterImage"
                    android:layout_alignParentTop="true">


                    <LinearLayout
                        android:id="@+id/percentAudianceLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:layout_below="@+id/percentCriticsLL"
                        android:layout_alignLeft="@+id/percentCriticsLL">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/percentCriticsA"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="99%"
                                android:textColor="#5DB6C9"
                                android:gravity="left"
                                android:textSize="20sp"
                                android:fontFamily="sans-serif-light"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aud. rate"
                                android:textColor="#5DB6C9"
                                android:id="@+id/tvAudianceRatingLbl"
                                android:textSize="9sp"

                                android:fontFamily="sans-serif-light"
                                android:layout_alignLeft="@+id/percentAudianceLL"
                                android:layout_alignRight="@+id/tvScoreLabel" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:layout_toLeftOf="@+id/tvAudienceScore">
                            <ProgressBar
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/progressBarAB"
                                android:layout_gravity="center"
                                android:animationResolution="@integer/abc_max_action_buttons"
                                android:background="#efefef"
                                android:alpha="0.7"
                                android:progress="@integer/abc_max_action_buttons"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:indeterminate="false" />
                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/percentCriticsLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/CrtRte">



                            <TextView
                                android:id="@+id/percentCriticsC"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="99%"
                                android:textSize="20sp"
                                android:textColor="#F79A36"
                                android:gravity="left"
                                android:fontFamily="sans-serif-light"
                                android:layout_alignTop="@+id/relativeLayout2"
                                android:layout_alignLeft="@+id/linearLayout4" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Crit. rate"
                                android:textSize="9sp"
                                android:textColor="#F79A36"
                                android:id="@+id/tvCriticRatingLbl"
                                android:fontFamily="sans-serif-light"
                                android:layout_below="@+id/percentCriticsC"
                                android:layout_alignLeft="@+id/percentCriticsC" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/percentCriticsC"
                            android:id="@+id/relativeLayout2"
                            android:layout_alignRight="@+id/linearLayout4">
                            <ProgressBar
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/progressBarCB"
                                android:animationResolution="@integer/abc_max_action_buttons"
                                android:background="#efefef"
                                android:alpha="1"
                                android:progress="@integer/abc_max_action_buttons"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"/>
                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <com.milansamardzic.ms.RemoteImageView
                    android:background="@android:drawable/dialog_frame"
                    android:id="@+id/ivPosterImage"
                    android:layout_width="130dp"
                    android:layout_height="fill_parent"
                    android:maxHeight="200dp"
                    android:src="@drawable/small_movie_poster"
                    android:scaleType="fitXY"
                    android:interpolator="@anim/abc_slide_in_bottom"
                    android:fadingEdge="horizontal"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true" />

                <RelativeLayout
                    android:id="@+id/tvCastRL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentLeft="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cast list"
                        android:textColor="#5567a2"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginLeft="140dp"
                        android:textSize="18sp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:visibility="gone"/>

                    <TextView
                        android:visibility="gone"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#141414"
                        android:lines="8"
                        android:textSize="16dp"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginLeft="140dp"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:text="Christian Bale, Joseph-Gordon Levitt"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />


                </RelativeLayout>


            </RelativeLayout>




        </RelativeLayout>
        </ScrollView>


</RelativeLayout>
