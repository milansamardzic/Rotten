<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#EEE2F1"
        android:alpha="0.7">



        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/abc_ic_search"
            android:id="@+id/search_button_sb"
            android:gravity="right|center"
            android:onClick="searchButton"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSearch"
            android:id="@+id/searchTerm"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/search_button_sb"
            android:layout_alignParentLeft="true"
            android:hint="Search..."
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColorHint="#ccc"
            android:inputType="textAutoCorrect|textAutoComplete|text"
            android:autoText="true"
            android:textColor="#000"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/smalyeSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/smiley"
            android:alpha="0.1"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lvMovies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="250dp"
        android:layout_alignParentBottom="true"
        android:dividerHeight="10dp"
        android:scrollbarStyle="insideOverlay"
        android:smoothScrollbar="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        >

    </ListView>


</LinearLayout>