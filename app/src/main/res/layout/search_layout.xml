<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ce5043">

        <EditText
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:layout_width="wrap_content"
            android:gravity="left|center"
            android:hint="Search"
            android:textColorHint="#efefef"
            android:padding="5dp"
            android:layout_height="50dp"
            android:textColor="#efefef"
            android:id="@+id/searchTerm"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:cursorVisible="true"
            android:textCursorDrawable="@color/abc_search_url_text_normal"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/search_button_sb"
            android:layout_toStartOf="@+id/search_button_sb"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="normal"
            android:background="#00000000"
            android:typeface="sans" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/search_button_sb"
            android:id="@+id/search_button_sb"
            android:gravity="right|center"
            android:onClick="searchButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/smalyeSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/smiley"
        android:alpha="0.1"/>

    <ListView
        android:id="@+id/lvMovies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="250dp"
        android:layout_alignParentBottom="true"
        android:dividerHeight="10dp"
        android:scrollbarStyle="insideOverlay"
        android:smoothScrollbar="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        >

    </ListView>


</LinearLayout>